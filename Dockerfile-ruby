FROM mdotcarter/devenv

RUN sudo apt-get install -y \
      build-essential \
      nodejs

# postgres 10 client
RUN sudo sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt/ stretch-pgdg main" >> /etc/apt/sources.list.d/pgdg.list'
RUN sudo sh -c 'wget -q https://www.postgresql.org/media/keys/ACCC4CF8.asc -O - | apt-key add -'

RUN sudo apt-get update
RUN sudo apt-get install -y \
      libpq-dev \
      postgresql-client-10

# rvm
RUN sudo gpg --batch --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB

RUN curl -sSL https://get.rvm.io | sudo bash -s stable
RUN sudo usermod -a -G rvm ${USER}
RUN . /etc/profile.d/rvm.sh

RUN /bin/bash -l -c "rvm --default install ruby-2.5.1"
RUN /bin/bash -l -c "gem install bundler --version=1.16.3"
RUN /bin/bash -l -c "gem install rails --version=5.2.1"
